{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "teams": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "members"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "members": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "type": "object",
                  "required": ["twitch", "game", "displayed"],
                  "properties": {
                    "twitch": {
                      "type": "string"
                    },
                    "game": {
                      "type": "string"
                    },
                    "displayed": {
                      "type": "string"
                    }
                  }
                },
                {
                  "type": "string"
                }
              ]
            }
          },
          "nonStreamerMembers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "ended": {
      "type": "boolean"
    }
  }
}
